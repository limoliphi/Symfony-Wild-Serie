{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="m-5 container">
        <h1>Register</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, { 'label': 'Nom d\'utilisateur' }) }}
        {{ form_row(registrationForm.bio, { 'label': 'Bio' }) }}

        <hr>
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, { 'label': 'Mot de passe' }) }}
        {{ form_row(registrationForm.agreeTerms, { 'label': 'J\'accepte les termes' }) }}
        <button class="btn btn-primary">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
